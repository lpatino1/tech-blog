<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<br><br><br>
<div class="row mt-4">
    <div class="col-md-6">
    <h3>New Blog Post:</h3>
    <br><br>
    </div>
  <div class="col-md-6 newBlog">
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-name" />
      </div>
      <br>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <br>
        <textarea class="form-input blogContent" id="blog-content" name="blog-desc"></textarea>
      </div>

      <br><br>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Previous Blogs</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{id}}">{{title}}</a></h4>
      </div>
  
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>