<div id="homeHeader">
  <h1 id="homeheaderContent">Recent Posts</h1>
</div>
<br>
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a class="blogTitleLink" href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <br>
    <p>
      {{format_date blog.date_created}}
    </p>
    <p>Submitted by {{blog.user.name}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.content}}
    </p>
  </div>
</div>
<br>
{{/each}}